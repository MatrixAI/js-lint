{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      // Force ESM mode
      "module": "NodeNext",
      // E.g. "ES2022" or "ESNext"
      "target": "ES2022",
  
      // Send ESM build into lib/esm
      "outDir": "./lib/esm",
      "declarationDir": "./lib/esm",
      
      // You generally still want .d.ts with ESM
      "declaration": true,
      // You can also keep "sourceMap": true or any other settings
    }
  }
  